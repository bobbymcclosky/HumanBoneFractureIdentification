from ultralytics import YOLO

# Load model
model = YOLO('yolo11n.pt')

# Train on TINY subset to verify everything works
results = model.train(
    data='Human Bone Fractures Multi-modal Image Dataset (HBFMID)/Bone Fractures Detection/data.yaml',
    epochs=10,
    imgsz=640,
    batch=8,
    name='test_run',
    device=0,
)

print("✓ Test training complete!")
# Evaluate model
metrics = model.val()
print("✓ Test evaluation complete!")  